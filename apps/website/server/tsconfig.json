{
    "compilerOptions": {
        "esModuleInterop": true,
        "target": "ES2020",
        "module": "CommonJS",
        "strict": true,
        "moduleResolution": "node",
        "noImplicitReturns": false,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "typeRoots": [
            "./node_modules/@types",
            "./src/types"
        ],
        "outDir": "./dist"
    },
    "include": [
        "src/**/*"
    ]
}